  "description": "Automatic Bitrix modules loader helps you to forget about CModule::IncludeModule and Loader::includeModule.",
  "homepage": "https://github.com/webarchitect609/bitrix-neverinclude",
  "keywords": [
    "bitrix",
    "module",
    "autoloading"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Sergey Gripinskiy",
      "email": "web-architect@mail.ru",
      "role": "Owner"
    }
  ],
  "require": {
    "php": "^7.2 || ^8.0",
    "webarchitect609/bitrix-cache": "^1.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "WebArch\\BitrixNeverInclude\\": "src/main"
    }
  }
}
